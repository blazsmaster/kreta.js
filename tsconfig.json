{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "src",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"removeComments": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}
